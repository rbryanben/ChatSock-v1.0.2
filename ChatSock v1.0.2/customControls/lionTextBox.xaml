<UserControl x:Class="ChatSock_v1._0._2.customControls.lionTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatSock_v1._0._2.customControls"
             mc:Ignorable="d" 
             Name="lionWindow"
             d:DesignHeight="60" d:DesignWidth="280">
    <Grid Width="280">
        <Label Name="headerText" Content="{Binding header, ElementName=lionWindow}" Foreground="#FF373737" />
        <Border CornerRadius="3" Margin="0,25,0,0" Background="White" Width="280" Height="30">
            <TextBox Name="textInput" GotFocus="textInput_GotFocus" Text="{Binding text , ElementName=lionWindow}" Height="30" Width="280" VerticalContentAlignment="Center" Padding="10,0,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF939393"/>
        </Border>
    </Grid>
</UserControl>
